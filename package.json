{
  "name": "tsc-publish",
  "version": "0.6.0",
  "description": "Utility to help publish minimal typescript based packages",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepublishOnly": "echo \"Do not run publish directly, run tsc-publish\" && exit 1",
    "test": "jest --verbose",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint src/**/* test/*.spec.ts",
    "codecov": "codecov",
    "tsc-publish": "npm run build && node ./dist/index.js",
    "tsc-publish-dry": "npm run build && node ./dist/index.js --dry-run"
  },
  "bin": {
    "tsc-publish": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MasterOdin/typescript-publish.git"
  },
  "keywords": [
    "typescript",
    "npm",
    "publish"
  ],
  "author": "Matthew Peveler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MasterOdin/typescript-publish/issues"
  },
  "homepage": "https://github.com/MasterOdin/typescript-publish#readme",
  "devDependencies": {
    "@masterodin/eslint-config-typescript": "^1.0.1",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "codecov": "^3.6.1",
    "eslint": "^7.1.0",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@types/ignore-walk": "^3.0.1",
    "@types/node": "^10.17.15",
    "ansi-colors": "^4.1.1",
    "commander": "^5.0.0",
    "ignore-walk": "^3.0.3",
    "strip-json-comments": "^3.0.1"
  },
  "engines": {
    "node": ">=10"
  }
}
